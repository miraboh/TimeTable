<?xml version="1.0" encoding="UTF-8"?>

<android.support.constraint.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#80dae4"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    <TextView android:layout_height="43dp"
              android:layout_width="155dp"
              android:textSize="35sp"
              android:id="@+id/firstnametext"
              android:text="TextView"
              android:layout_marginTop="16dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
              android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="8dp"/>

    <TextView android:layout_height="33dp"
              android:layout_width="match_parent"
              android:id="@+id/lastnametext"
              android:text="TextView"
              android:textSize="18sp"
              android:layout_marginTop="16dp"
              app:layout_constraintTop_toBottomOf="@+id/firstnametext" android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
              android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="8dp"/>

    <TextView android:layout_height="34dp"
              android:layout_width="match_parent"
              android:id="@+id/addresstext"
              android:textSize="18sp"
              android:text="TextView"
              android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/lastnametext"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginRight="8dp" android:layout_marginStart="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"/>

    <Button android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/updateBtn"
            android:text="update"
            app:layout_constraintStart_toEndOf="@+id/deleteBtn"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/depttext"
    />

    <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/deleteBtn"
            android:text="delete"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/updateBtn"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/depttext"
    />

    <TextView android:layout_height="32dp"
              android:layout_width="match_parent"
              android:id="@+id/depttext"
              android:text="TextView"
              android:textSize="18sp"
              android:layout_marginTop="16dp"
              app:layout_constraintTop_toBottomOf="@+id/addresstext" android:layout_marginStart="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
              android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginRight="8dp"
    />

</android.support.constraint.ConstraintLayout>